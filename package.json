{
    "name": "nextjs-pwa-starter",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "pnpm --parallel dev",
        "dev:frontend": "pnpm --filter frontend dev",
        "dev:backend": "pnpm --filter backend dev",
        "build": "pnpm --filter frontend build",
        "start": "pnpm --filter frontend start",
        "lint": "pnpm --filter frontend lint",
        "typecheck": "pnpm --filter frontend typecheck",
        "supabase:start": "cd backend && supabase start",
        "supabase:stop": "cd backend && supabase stop",
        "supabase:status": "cd backend && supabase status"
    }
}